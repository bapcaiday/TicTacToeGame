<div class="mt-4">
    <h3>Profile</h3>

    <div class="row">
        <div class="col-md-4">
            <img src="{{user.avatar}}" alt="Avatar" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label for="score">Điểm số</label>
                <input type="text" class="form-control" id="score" name="score" value="{{user.scores}}" readonly>
            </div>
        </div>
    </div>

    <form method="POST" action="/profile/{{user.username}}?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Username</label>
        <input type="text" class="form-control" id="uname" name="uname" value="{{user.username}}">
    </div>
    <div class="form-group">
        <label for="discription">Fullname</label>
        <input type="text" class="form-control" id="fname" name="fname" value="{{user.fullname}}">
    </div>

    <div class="card">
        <div class="card-header">Avatar</div>
        <div class="card-body">
            <div class="form-group">
               <input type="file" class="form-control-file border" id="avatar" name="avatar">
            </div>
        </div>
    </div>

    

    <button type="submit" class="btn btn-primary mt-4">Cập nhật</button>
    </form>
</div>
   <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

   <script>
    $(function() {
      $("#avatar").fileinput({
        uploadUrl: "",
        maxFileCount: 5,
        allowedFileTypes: ['image'],    // allow only images
        showCancel: true,
        initialPreviewAsData: true,
        overwriteInitial: false,
        theme: 'fa5',
        dropZoneEnabled: true,
    })
  });
 </script>